<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EduPlanner.Views.Student.StudentEntry">
    <ContentPage.Content>
        <Grid>
            <Image Source="background.jpg" Aspect="AspectFill"></Image>
            <StackLayout Padding="15" VerticalOptions="CenterAndExpand">
                <Label Text="Agregar estudiantes"
                        VerticalOptions="CenterAndExpand" 
                        HorizontalOptions="CenterAndExpand"
                        FontSize="Large"/>
                <Entry x:Name="TxtName"
                        Placeholder="Ingresa tu nombre"/>
                <Entry x:Name="TxtEmail"
                        Placeholder="Ingresa tu correo"/>
                <Entry x:Name="TxtPass"
                        Placeholder="Ingresa tu contraseña"/>
                <Button Text="Guardar"
                        x:Name="ButtonSave"
                        CornerRadius="15"
                        Clicked="ButtonSave_Clicked"/>
            </StackLayout>
        </Grid>

    </ContentPage.Content>
</ContentPage>